                                <Typography sx={{ mt: 2, fontSize: '1.1rem', color: 'text.secondary' }}>
                                    {isRefreshing ? 'Actualizando asignaciones...' : 'Cargando asignaciones programadas...'}
                                </Typography>
                            </Box>
                        </motion.div>
                    ) : (
                        <motion.div
                            initial={{ opacity: 0 }}
                            animate={{ opacity: 1 }}
                            transition={{ delay: 0.2 }}
